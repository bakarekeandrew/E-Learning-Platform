@page
@model E_Learning_Platform.Pages.Instructor.Content.AssignmentsModel
@{
    ViewData["Title"] = "Manage Assignments";
    Layout = "/Pages/Instructor/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Instructor/Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Assignments</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Manage Assignments</h1>
        @if (Model.SelectedCourseId.HasValue)
        {
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createAssignmentModal">
                <i class="bi bi-plus-circle"></i> New Assignment
            </button>
        }
    </div>

    <!-- Course Selection -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-12">
                    <label class="form-label">Course</label>
                    <select asp-for="SelectedCourseId" asp-items="Model.CoursesList"
                            class="form-select" onchange="this.form.submit()">
                        <option value="">Select Course</option>
                    </select>
                </div>
            </form>
        </div>
    </div>

    <!-- Assignments Table -->
    <div class="card">
        <div class="card-body">
            @if (Model.Assignments.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Due Date</th>
                                <th>Submissions</th>
                                <th>Max Score</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var assignment in Model.Assignments)
                            {
                                <tr>
                                    <td>
                                        <strong>@assignment.Title</strong>
                                        @if (!string.IsNullOrEmpty(assignment.Instructions))
                                        {
                                            <div class="text-muted small text-truncate" style="max-width: 300px;">
                                                @assignment.Instructions
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        @if (assignment.DueDate.HasValue)
                                        {
                                            @assignment.DueDate.Value.ToString("MMM dd, yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">No due date</span>
                                        }
                                    </td>
                                    <td>
                                        @assignment.SubmissionCount total
                                        @if (assignment.UngradedCount > 0)
                                        {
                                            <span class="badge bg-warning ms-2">@assignment.UngradedCount to grade</span>
                                        }
                                    </td>
                                    <td>@assignment.MaxScore</td>
                                    <td class="text-end">
                                        <div class="btn-group">
                                            <a asp-page="/Instructor/Content/Submissions"
                                               asp-route-assignmentId="@assignment.AssignmentId"
                                               @* asp-route-courseId="@assignment.CourseId" *@
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-list-check"></i> Submissions
                                            </a>
                                            <a asp-page="/Instructor/Content/EditAssignment"
                                               asp-route-assignmentId="@assignment.AssignmentId"
                                               @* asp-route-courseId="@assignment.CourseId" *@
                                               class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <form method="post" asp-page-handler="Delete"
                                                  asp-route-id="@assignment.AssignmentId"
                                                  onsubmit="return confirm('Are you sure you want to delete this assignment?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    @if (Model.SelectedCourseId.HasValue)
                    {
                        <p>No assignments found for this course.</p>
                    }
                    else
                    {
                        <p>Please select a course to view assignments.</p>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- Create Assignment Modal -->
<div class="modal fade" id="createAssignmentModal" tabindex="-1" aria-labelledby="createAssignmentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createAssignmentModalLabel">Create New Assignment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="Create">
                <div class="modal-body">
                    <input type="hidden" name="CourseId" value="@Model.SelectedCourseId" />
                    <div class="mb-3">
                        <label for="assignmentTitle" class="form-label">Title</label>
                        <input type="text" class="form-control" id="assignmentTitle" name="Title" required>
                    </div>
                    <div class="mb-3">
                        <label for="assignmentInstructions" class="form-label">Instructions</label>
                        <textarea class="form-control" id="assignmentInstructions" name="Instructions" rows="4"></textarea>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="assignmentDueDate" class="form-label">Due Date</label>
                            <input type="date" class="form-control" id="assignmentDueDate" name="DueDate">
                        </div>
                        <div class="col-md-6">
                            <label for="assignmentMaxScore" class="form-label">Max Score</label>
                            <input type="number" class="form-control" id="assignmentMaxScore" name="MaxScore" value="100" min="1">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Assignment</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-submit form when course selection changes
            var courseSelect = document.getElementById('SelectedCourseId');
            if (courseSelect) {
                courseSelect.addEventListener('change', function() {
                    this.form.submit();
                });
            }
        });
    </script>
}