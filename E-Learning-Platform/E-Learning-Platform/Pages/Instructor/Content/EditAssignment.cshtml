@page "{assignmentId:int}/{courseId:int}"
@model E_Learning_Platform.Pages.Instructor.Content.EditAssignmentModel
@{
    ViewData["Title"] = "Edit Assignment";
    Layout = "/Pages/Instructor/_Layout.cshtml";
}

<div class="container">
    <h2>Edit Assignment</h2>

    <form method="post">
        <input type="hidden" asp-for="AssignmentId" />
        <input type="hidden" asp-for="CourseId" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" required>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Instructions" class="form-label"></label>
            <textarea asp-for="Instructions" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Instructions" class="text-danger"></span>
        </div>

        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="DueDate" class="form-label"></label>
                <input asp-for="DueDate" type="date" class="form-control">
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="MaxScore" class="form-label"></label>
                <input asp-for="MaxScore" type="number" class="form-control" min="1">
                <span asp-validation-for="MaxScore" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-page="/Instructor/Content/Assignments"
               asp-route-SelectedCourseId="@Model.CourseId"
               class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}