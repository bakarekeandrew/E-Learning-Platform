@page
@model E_Learning_Platform.Pages.Instructor.Content.EditModuleModel
@{
    Layout = "/Pages/Instructor/_Layout.cshtml";
    ViewData["Title"] = "Edit Module";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow">
            <div class="card-header py-3">
                <h5 class="mb-0">Edit Module</h5>
                <p class="text-muted mb-0">For course: @Model.CourseName</p>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Module.Title" class="form-label">Module Title</label>
                        <input asp-for="Module.Title" class="form-control" />
                        <span asp-validation-for="Module.Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Module.Description" class="form-label">Description</label>
                        <textarea asp-for="Module.Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Module.Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Module.SequenceNumber" class="form-label">Order</label>
                        <input asp-for="Module.SequenceNumber" class="form-control" type="number" min="1" />
                        <span asp-validation-for="Module.SequenceNumber" class="text-danger"></span>
                        <small class="form-text text-muted">The order this module appears in the course</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Module.DurationMinutes" class="form-label">Duration (minutes)</label>
                        <input asp-for="Module.DurationMinutes" class="form-control" type="number" min="0" />
                        <span asp-validation-for="Module.DurationMinutes" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="Module.IsFree" class="form-check-input" />
                        <label asp-for="Module.IsFree" class="form-check-label">Make this module free</label>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-page="Modules" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}