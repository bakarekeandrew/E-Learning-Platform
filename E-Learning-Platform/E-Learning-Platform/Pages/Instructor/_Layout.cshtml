<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Learning Instructor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-color: #4f46e5;
            --secondary-color: #6366f1;
            --light-color: #f8fafc;
            --dark-color: #1e293b;
            --sidebar-width: 240px;
            --sidebar-bg: #f8fafc;
            --active-menu-bg: #e0e7ff;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f1f5f9;
        }

        .sidebar {
            width: var(--sidebar-width);
            background-color: var(--sidebar-bg);
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            overflow-y: auto;
            box-shadow: 1px 0 5px rgba(0, 0, 0, 0.05);
            padding: 20px 0;
            z-index: 1000;
        }

        .logo {
            font-size: 22px;
            font-weight: 700;
            color: var(--primary-color);
            padding: 0 20px 20px;
            margin-bottom: 20px;
            border-bottom: 1px solid #e2e8f0;
        }

        .menu-category {
            text-transform: uppercase;
            font-size: 12px;
            color: #64748b;
            font-weight: 600;
            letter-spacing: 0.5px;
            padding: 15px 20px 5px;
        }

        .sidebar-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .menu-item {
            padding: 10px 20px;
            display: block;
            color: var(--dark-color);
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            margin: 2px 0;
            border-radius: 0 20px 20px 0;
        }

        .menu-item:hover, .menu-item.active {
            background-color: var(--active-menu-bg);
            color: var(--primary-color);
            padding-left: 25px;
            text-decoration: none;
        }

        .main-content {
            margin-left: var(--sidebar-width);
            padding: 20px 30px;
        }

        .stats-card {
            border-left: 4px solid;
            transition: transform 0.3s;
            height: 100%;
        }

        .stats-card:hover {
            transform: translateY(-3px);
        }

        .stats-card .card-body {
            padding: 1.5rem;
        }

        .stats-card .stat-value {
            font-size: 2rem;
            font-weight: 700;
        }

        .user-profile {
            padding: 20px;
            border-bottom: 1px solid #e2e8f0;
            margin-bottom: 20px;
        }

        .user-avatar {
            color: var(--primary-color);
        }

        .user-name {
            font-weight: 600;
            color: var(--dark-color);
        }

        .user-email {
            font-size: 0.875rem;
        }

        .user-role .badge {
            font-size: 0.75rem;
            padding: 0.25em 0.75em;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="logo">E-Learning Instructor</div>
        
        <!-- User Profile -->
        <partial name="_UserProfilePartial" />

        <ul class="sidebar-menu">
            <li><a asp-page="/Instructor/Dashboard" class="menu-item @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Instructor/Dashboard" ? "active" : "")">
                <i class="bi bi-speedometer2 me-2"></i>Dashboard
            </a></li>
            <li><a asp-page="/Instructor/Courses/Index" class="menu-item @(ViewContext.RouteData.Values["Page"]?.ToString()?.StartsWith("/Instructor/Courses") == true ? "active" : "")">
                <i class="bi bi-book me-2"></i>My Courses
            </a></li>
            @* <li><a asp-page="/Instructor/Students/Index" class="menu-item @(ViewContext.RouteData.Values["Page"]?.ToString()?.StartsWith("/Instructor/Students") == true ? "active" : "")"> *@
            @*     <i class="bi bi-people me-2"></i>Students *@
            @* </a></li> *@

            <li class="menu-category">CONTENT</li>
            <li><a asp-page="/Instructor/Content/Modules" class="menu-item @(ViewContext.RouteData.Values["Page"]?.ToString()?.Contains("/Content/Modules") == true ? "active" : "")">
                <i class="bi bi-collection me-2"></i>Modules
            </a></li>
            <li><a asp-page="/Instructor/Content/Assignments" class="menu-item @(ViewContext.RouteData.Values["Page"]?.ToString()?.Contains("/Content/Assignments") == true ? "active" : "")">
                <i class="bi bi-file-earmark-text me-2"></i>Assignments
            </a></li>
            <li><a asp-page="/Instructor/Content/Quizzes" class="menu-item @(ViewContext.RouteData.Values["Page"]?.ToString()?.Contains("/Content/Quizzes") == true ? "active" : "")">
                <i class="bi bi-question-circle me-2"></i>Quizzes
            </a></li>

            <li class="menu-category">ACCOUNT</li>
            
            <li><a asp-page="/Logout" class="menu-item">
                <i class="bi bi-box-arrow-right me-2"></i>Logout
            </a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>