@page
@model E_Learning_Platform.Pages.Student.CatalogModel
@{
    ViewData["Title"] = "Course Catalog";
}

<style>
    .course-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s ease;
        background: white;
        height: 100%;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .course-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    .course-thumbnail {
        height: 200px;
        object-fit: cover;
        width: 100%;
        position: relative;
        overflow: hidden;
    }

    .course-thumbnail img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .course-card:hover .course-thumbnail img {
        transform: scale(1.1);
    }

    .course-category {
        position: absolute;
        top: 15px;
        right: 15px;
        background: rgba(67, 97, 238, 0.9);
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 500;
        backdrop-filter: blur(5px);
    }

    .course-content {
        padding: 1.5rem;
    }

    .course-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 0.75rem;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .course-description {
        color: #718096;
        font-size: 0.9rem;
        margin-bottom: 1rem;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        line-height: 1.6;
    }

    .course-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
        color: #718096;
        font-size: 0.9rem;
    }

    .course-meta-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .course-instructor {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding-top: 1rem;
        border-top: 1px solid #e2e8f0;
    }

    .instructor-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: #e2e8f0;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #4361ee;
    }

    .instructor-info {
        flex: 1;
    }

    .instructor-name {
        font-size: 0.9rem;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 0.25rem;
    }

    .instructor-title {
        font-size: 0.8rem;
        color: #718096;
    }

    .enroll-button {
        width: 100%;
        padding: 0.75rem;
        background: #4361ee;
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .enroll-button:hover {
        background: #3730a3;
        transform: translateY(-2px);
    }

    .empty-state {
        text-align: center;
        padding: 3rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .empty-state i {
        font-size: 4rem;
        color: #4361ee;
        margin-bottom: 1.5rem;
    }

    .empty-state h3 {
        color: #2d3748;
        margin-bottom: 1rem;
    }

    .empty-state p {
        color: #718096;
        margin-bottom: 1.5rem;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="display-6 fw-bold mb-2">Course Catalog</h1>
            <p class="text-muted mb-0">Discover new courses and expand your knowledge</p>
        </div>
        <a href="/Student/Courses" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-2"></i>Back to My Courses
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger mb-4">
            @Model.ErrorMessage
        </div>
    }

    @if (!Model.AvailableCourses.Any())
    {
        <div class="empty-state">
            <i class="bi bi-journal-bookmark"></i>
            <h3>No New Courses Available</h3>
            <p>You're enrolled in all available courses or there are no new courses published yet.</p>
            <a href="/Student/Courses" class="btn btn-primary">
                <i class="bi bi-arrow-left me-2"></i>Back to My Courses
            </a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var course in Model.AvailableCourses)
            {
                <div class="col">
                    <div class="course-card">
                        <div class="course-thumbnail">
                            @if (string.IsNullOrEmpty(course.ThumbnailUrl))
                            {
                                <div class="d-flex align-items-center justify-content-center h-100 bg-light">
                                    <i class="bi bi-journal-richtext text-muted" style="font-size: 3rem;"></i>
                                </div>
                            }
                            else
                            {
                                <img src="@course.ThumbnailUrl" alt="@course.Title">
                            }
                            <span class="course-category">@course.Category</span>
                        </div>
                        <div class="course-content">
                            <h3 class="course-title">@course.Title</h3>
                            <p class="course-description">@course.Description</p>
                            
                            <div class="course-meta">
                                <div class="course-meta-item">
                                    <i class="bi bi-clock"></i>
                                    <span>@course.Duration hrs</span>
                                </div>
                                <div class="course-meta-item">
                                    <i class="bi bi-book"></i>
                                    <span>@course.ModuleCount modules</span>
                                </div>
                                <div class="course-meta-item">
                                    <i class="bi bi-bar-chart"></i>
                                    <span>@course.Difficulty</span>
                                </div>
                            </div>

                            <div class="course-instructor">
                                <div class="instructor-avatar">
                                    <i class="bi bi-person"></i>
                                </div>
                                <div class="instructor-info">
                                    <div class="instructor-name">@course.Instructor</div>
                                    <div class="instructor-title">Course Instructor</div>
                                </div>
                            </div>

                            <div class="mt-4">
                                <form method="get" action="/Student/Courses/Enroll">
                                    <input type="hidden" name="id" value="@course.CourseId" />
                                    <button type="submit" class="enroll-button">
                                        <i class="bi bi-plus-circle me-2"></i>Enroll Now
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>