@page
@model E_Learning_Platform.Pages.Student.Courses.EnrollModel
@{
    ViewData["Title"] = "Course Enrollment";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body p-5">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger mb-4">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            @Model.ErrorMessage
                        </div>
                        <div class="text-center mt-4">
                            <a href="/Student/Catalog" class="btn btn-primary">
                                <i class="bi bi-arrow-left me-2"></i>Back to Catalog
                            </a>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success mb-4">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            @Model.SuccessMessage
                        </div>
                        <div class="text-center mt-4">
                            <a href="/Student/Courses" class="btn btn-primary">
                                <i class="bi bi-journal-bookmark me-2"></i>Go to My Courses
                            </a>
                        </div>
                    }

                    @if (string.IsNullOrEmpty(Model.ErrorMessage) && string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="text-center">
                            <i class="bi bi-hourglass-split text-primary" style="font-size: 3rem;"></i>
                            <h3 class="my-3">Processing Enrollment</h3>
                            <p class="text-muted">Please wait while we process your enrollment request...</p>
                            <div class="spinner-border text-primary mt-3" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // If we're in the "processing" state, redirect to courses page after a delay
    if (!document.querySelector('.alert')) {
        setTimeout(function() {
            window.location.href = '/Student/Courses';
        }, 2000);
    }
</script>