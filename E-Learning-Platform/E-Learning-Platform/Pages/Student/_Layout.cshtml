<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Learning Platform</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3f37c9;
            --accent-color: #4895ef;
            --light-bg: #f8f9fa;
            --dark-text: #2b2d42;
            --light-text: #8d99ae;
            --white: #ffffff;
            --sidebar-width: 250px;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--light-bg);
            color: var(--dark-text);
            overflow-x: hidden;
        }

        /* Sidebar Styles */
        .sidebar {
            width: var(--sidebar-width);
            min-height: 100vh;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            box-shadow: 4px 0 10px rgba(0,0,0,0.1);
            position: fixed;
            left: 0;
            top: 0;
            z-index: 1000;
            padding: 1.5rem 0;
        }

        .sidebar-brand {
            color: var(--white);
            text-align: center;
            padding: 1rem;
            margin-bottom: 2rem;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .sidebar-brand h4 {
            margin: 0;
            font-size: 1.25rem;
            font-weight: 600;
        }

        .nav-item {
            margin: 0.5rem 1rem;
        }

        .nav-link {
            color: rgba(255,255,255,0.8) !important;
            border-radius: 8px;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
        }

        .nav-link:hover, .nav-link.active {
            background-color: rgba(255,255,255,0.1);
            color: var(--white) !important;
            transform: translateX(5px);
        }

        .nav-link i {
            margin-right: 12px;
            font-size: 1.1rem;
            width: 24px;
            text-align: center;
        }

        /* Main Content Styles */
        .main-content {
            margin-left: var(--sidebar-width);
            padding: 2rem;
            min-height: 100vh;
            background-color: var(--light-bg);
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }

            .sidebar.show {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
                padding: 1rem;
            }
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: var(--light-bg);
        }

        ::-webkit-scrollbar-thumb {
            background: var(--accent-color);
            border-radius: 4px;
        }

        /* User Profile Section */
        .user-profile {
            padding: 1rem;
            margin-top: auto;
            border-top: 1px solid rgba(255,255,255,0.1);
            color: var(--white);
        }

        .profile-info {
            display: flex;
            align-items: center;
            padding: 0.5rem 1rem;
        }

        .profile-image {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 12px;
            background-color: rgba(255,255,255,0.1);
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="sidebar-brand">
                <h4>E-Learning Platform</h4>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Student/Dashboard" ? "active" : "")" 
                       asp-page="/Student/Dashboard">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Student/Courses" ? "active" : "")" 
                       asp-page="/Student/Courses">
                        <i class="bi bi-journal-bookmark"></i> My Courses
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Student/Catalog" ? "active" : "")" 
                       asp-page="/Student/Catalog">
                        <i class="bi bi-grid"></i> Course Catalog
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString()?.Contains("/Assignments") == true ? "active" : "")" 
                       asp-page="/Student/Courses/Assignments">
                        <i class="bi bi-file-earmark-text"></i> Assignments
                    </a>
                </li>
                @* <li class="nav-item"> *@
                @*     <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString()?.Contains("/Certificate") == true ? "active" : "")"  *@
                @*        asp-page="/Student/Certificate"> *@
                @*         <i class="bi bi-award"></i> Certificates *@
                @*     </a> *@
                @* </li> *@
                @* <li class="nav-item"> *@
                @*     <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Student/Calendar" ? "active" : "")"  *@
                @*        asp-page="/Student/Calendar"> *@
                @*         <i class="bi bi-calendar"></i> Calendar *@
                @*     </a> *@
                @* </li> *@
                @* <li class="nav-item"> *@
                @*     <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Student/Resources" ? "active" : "")"  *@
                @*        asp-page="/Student/Resources"> *@
                @*         <i class="bi bi-collection"></i> Resources *@
                @*     </a> *@
                @* </li> *@
            </ul>

            <!-- User Profile Section -->
            <div class="user-profile mt-auto">
                <div class="profile-info">
                    <div class="profile-image">
                        <i class="bi bi-person"></i>
                    </div>
                    <div>
                        <a class="nav-link p-0 mb-1" asp-page="/Student/Profile">
                            <small>My Profile</small>
                        </a>
                        <a class="nav-link p-0" asp-page="/Logout">
                            <small>Logout</small>
                        </a>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Add active class to current nav item
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');
            
            navLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
        });
    </script>
</body>
</html>