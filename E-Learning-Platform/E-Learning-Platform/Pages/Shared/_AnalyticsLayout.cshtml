<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Learning Platform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        .analytics-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 250px;
            background: #fff;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
            z-index: 1000;
            padding-top: 60px;
        }

        .analytics-content {
            margin-left: 250px;
            padding: 20px;
        }

        .analytics-nav-item {
            padding: 12px 20px;
            color: #333;
            text-decoration: none;
            display: flex;
            align-items: center;
            transition: all 0.3s;
        }

        .analytics-nav-item:hover {
            background: #f8f9fa;
            color: #4e73df;
        }

        .analytics-nav-item.active {
            background: #4e73df;
            color: white;
        }

        .analytics-nav-item i {
            margin-right: 10px;
            width: 20px;
            text-align: center;
        }

        .stat-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            transition: transform 0.3s;
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .trend-indicator {
            font-size: 0.9rem;
            margin-top: 5px;
        }

        .trend-indicator i {
            margin-right: 5px;
        }

        .chart-container {
            position: relative;
            height: 300px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="analytics-sidebar">
        <div class="d-flex flex-column">
            <a href="/Analytics/Overview" class="analytics-nav-item @(ViewContext.RouteData.Values["Page"].ToString().Contains("Overview") ? "active" : "")">
                <i class="fas fa-chart-line"></i>
                Overview
            </a>
            <a href="/Analytics/CoursePerformance" class="analytics-nav-item @(ViewContext.RouteData.Values["Page"].ToString().Contains("CoursePerformance") ? "active" : "")">
                <i class="fas fa-graduation-cap"></i>
                Course Performance
            </a>
            <a href="/Analytics/UserEngagement" class="analytics-nav-item @(ViewContext.RouteData.Values["Page"].ToString().Contains("UserEngagement") ? "active" : "")">
                <i class="fas fa-users"></i>
                User Engagement
            </a>
        </div>
    </div>

    <div class="analytics-content">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 