@page
@model E_Learning_Platform.Pages.HomepageModel
@{
    ViewData["Title"] = "Home Page";
    ViewData["Message"] = "Welcome to our e-learning platform!";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Online Learning Platform - Home</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- AOS Animation Library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css">

    <style>
        :root {
            --primary-color: #4a6cf7;
            --secondary-color: #6b7280;
            --light-bg: #f9fafb;
            --dark-text: #1f2937;
            --white: #ffffff;
            --gradient-primary: linear-gradient(135deg, #4a6cf7 0%, #6a8dff 100%);
            --gradient-secondary: linear-gradient(135deg, #f9734a 0%, #ff9f7a 100%);
            --gradient-accent: linear-gradient(135deg, #f74a8a 0%, #ff7aad 100%);
        }

        body {
            font-family: 'Poppins', sans-serif;
            line-height: 1.6;
            color: var(--dark-text);
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        /* Header/Navigation */
        .header {
            background-color: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
            position: fixed;
            width: 100%;
            z-index: 997;
            padding: 15px 0;
            transition: all 0.3s;
        }

        .header.scrolled {
            padding: 10px 0;
            background-color: rgba(255, 255, 255, 0.98);
        }

        .navbar {
            padding: 0;
        }

        .navbar ul {
            margin: 0;
            padding: 0;
            display: flex;
            list-style: none;
            align-items: center;
        }

        .navbar li {
            position: relative;
        }

        .navbar a {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 0 10px 30px;
            font-size: 16px;
            font-weight: 500;
            color: var(--dark-text);
            white-space: nowrap;
            transition: 0.3s;
            text-decoration: none;
        }

        .navbar a:hover, .navbar .active, .navbar li:hover > a {
            color: var(--primary-color);
        }

        .navbar .getstarted {
            background: var(--gradient-primary);
            padding: 10px 25px;
            margin-left: 15px;
            border-radius: 50px;
            color: var(--white);
            font-weight: 500;
            box-shadow: 0 4px 15px rgba(74, 108, 247, 0.2);
            transition: all 0.3s ease;
        }

        .navbar .getstarted:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(74, 108, 247, 0.3);
            color: var(--white);
        }

        .login-btn {
            font-weight: 500;
            font-size: 15px;
            letter-spacing: 0.5px;
            display: inline-block;
            padding: 10px 25px;
            border-radius: 50px;
            transition: 0.3s;
            color: var(--primary-color);
            border: 2px solid var(--primary-color);
            margin-right: 10px;
            text-decoration: none;
        }

        .login-btn:hover {
            background: var(--primary-color);
            color: var(--white);
            transform: translateY(-2px);
        }

            .login-btn i {
                margin-right: 5px;
            }

        /* Hero Section */
        #hero {
            width: 100%;
            min-height: 100vh;
            background: url('../img/hero-bg.jpg') center center no-repeat;
            background-size: cover;
            position: relative;
            padding-top: 80px;
            display: flex;
            align-items: center;
        }

            #hero:before {
                content: "";
                background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.85) 100%);
                position: absolute;
                bottom: 0;
                top: 0;
                left: 0;
                right: 0;
            }

            #hero .container {
                position: relative;
                z-index: 1;
            }

        .hero-content {
            padding: 60px 0;
        }

            .hero-content h1 {
                font-size: 3.5rem;
                font-weight: 700;
                margin-bottom: 20px;
                color: var(--dark-text);
                line-height: 1.2;
            }

            .hero-content h2 {
                font-size: 1.5rem;
                color: var(--primary-color);
                margin-bottom: 30px;
                font-weight: 500;
            }

        .btn-get-started {
            font-weight: 500;
            font-size: 16px;
            letter-spacing: 1px;
            display: inline-flex;
            align-items: center;
            padding: 15px 35px;
            border-radius: 50px;
            transition: 0.5s;
            margin-top: 30px;
            color: var(--white);
            background: var(--gradient-primary);
            text-decoration: none;
            box-shadow: 0 4px 15px rgba(74, 108, 247, 0.2);
        }

            .btn-get-started:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(74, 108, 247, 0.3);
                color: var(--white);
            }

            .btn-get-started i {
                margin-left: 10px;
                transition: 0.3s;
            }

            .btn-get-started:hover i {
                transform: translateX(5px);
            }

        .hero-img {
            text-align: right;
            position: relative;
        }

            .hero-img img {
                max-width: 100%;
                height: auto;
                animation: float 6s ease-in-out infinite;
            }

        @@keyframes float {
            0% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-20px);
            }

            100% {
                transform: translateY(0px);
            }
        }

        /* Features Section */
        .features {
            padding: 100px 0;
            background: var(--light-bg);
        }

        .section-header {
            text-align: center;
            padding-bottom: 60px;
        }

            .section-header h2 {
                font-size: 2.5rem;
                font-weight: 700;
                color: var(--dark-text);
                margin-bottom: 20px;
            }

            .section-header p {
                color: var(--secondary-color);
                font-size: 1.1rem;
                max-width: 600px;
                margin: 0 auto;
            }

        .feature-card {
            background: var(--white);
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            height: 100%;
            position: relative;
            overflow: hidden;
        }

            .feature-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
            }

            .feature-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 5px;
                background: var(--gradient-primary);
            }

            .feature-card i {
                font-size: 40px;
                color: var(--primary-color);
                margin-bottom: 20px;
            }

            .feature-card h3 {
                font-size: 1.5rem;
                font-weight: 600;
                margin-bottom: 15px;
                color: var(--dark-text);
            }

            .feature-card p {
                color: var(--secondary-color);
                margin-bottom: 0;
            }

        /* Testimonials Section */
        .testimonials {
            padding: 100px 0;
            background: var(--white);
        }

        .testimonial-card {
            background: var(--white);
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            margin: 20px;
            position: relative;
        }

            .testimonial-card::before {
                content: '\201C';
                font-size: 60px;
                color: var(--primary-color);
                opacity: 0.2;
                position: absolute;
                top: 10px;
                left: 20px;
            }

        .testimonial-content {
            position: relative;
            z-index: 1;
        }

        .testimonial-text {
            font-size: 1.1rem;
            color: var(--dark-text);
            margin-bottom: 20px;
            line-height: 1.8;
        }
