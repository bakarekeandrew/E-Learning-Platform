@page
@model E_Learning_Platform.Pages.HomepageModel
@{
    ViewData["Title"] = "Home Page";
    ViewData["Message"] = "Welcome to our e-learning platform!";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Online Learning Platform - Home</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- AOS Animation Library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css">

    <style>
        :root {
            --primary-color: #4a6cf7;
            --secondary-color: #6b7280;
            --light-bg: #f9fafb;
            --dark-text: #1f2937;
            --white: #ffffff;
            --gradient-primary: linear-gradient(135deg, #4a6cf7 0%, #6a8dff 100%);
            --gradient-secondary: linear-gradient(135deg, #f9734a 0%, #ff9f7a 100%);
            --gradient-accent: linear-gradient(135deg, #f74a8a 0%, #ff7aad 100%);
        }

        body {
            font-family: 'Poppins', sans-serif;
            line-height: 1.6;
            color: var(--dark-text);
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        /* Header/Navigation */
        .header {
            background-color: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
            position: fixed;
            width: 100%;
            z-index: 997;
            padding: 15px 0;
            transition: all 0.3s;
        }

        .header.scrolled {
            padding: 10px 0;
            background-color: rgba(255, 255, 255, 0.98);
        }

        .navbar {
            padding: 0;
        }

        .navbar ul {
            margin: 0;
            padding: 0;
            display: flex;
            list-style: none;
            align-items: center;
        }

        .navbar li {
            position: relative;
        }

        .navbar a {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 0 10px 30px;
            font-size: 16px;
            font-weight: 500;
            color: var(--dark-text);
            white-space: nowrap;
            transition: 0.3s;
            text-decoration: none;
        }

        .navbar a:hover, .navbar .active, .navbar li:hover > a {
            color: var(--primary-color);
        }

        .navbar .getstarted {
            background: var(--gradient-primary);
            padding: 10px 25px;
            margin-left: 15px;
            border-radius: 50px;
            color: var(--white);
            font-weight: 500;
            box-shadow: 0 4px 15px rgba(74, 108, 247, 0.2);
            transition: all 0.3s ease;
        }

        .navbar .getstarted:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(74, 108, 247, 0.3);
            color: var(--white);
        }

        .login-btn {
            font-weight: 500;
            font-size: 15px;
            letter-spacing: 0.5px;
            display: inline-block;
            padding: 10px 25px;
            border-radius: 50px;
            transition: 0.3s;
            color: var(--primary-color);
            border: 2px solid var(--primary-color);
            margin-right: 10px;
            text-decoration: none;
        }

        .login-btn:hover {
            background: var(--primary-color);
            color: var(--white);
            transform: translateY(-2px);
        }
