@page
@model E_Learning_Platform.Pages.AdminDashboardModel
@{
    Layout = null;
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Learning Platform Dashboard</title>
    <style>
        :root {
            --primary-color: #4f46e5;
            --secondary-color: #6366f1;
            --light-color: #f8fafc;
            --dark-color: #1e293b;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --border-radius: 8px;
            --box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --sidebar-width: 240px;
            --sidebar-bg: #f8fafc;
            --active-menu-bg: #e0e7ff;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: #f1f5f9;
            color: var(--dark-color);
            display: flex;
        }

        /* Sidebar Styles */
        .sidebar {
            width: var(--sidebar-width);
            background-color: var(--sidebar-bg);
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            overflow-y: auto;
            box-shadow: 1px 0 5px rgba(0, 0, 0, 0.05);
            padding: 20px 0;
        }

        .sidebar-header {
            padding: 0 20px 20px;
            margin-bottom: 20px;
            border-bottom: 1px solid #e2e8f0;
        }

        .logo {
            font-size: 22px;
            font-weight: 700;
            color: var(--primary-color);
        }

        .sidebar-menu {
            list-style: none;
        }

        .menu-category {
            text-transform: uppercase;
            font-size: 12px;
            color: #64748b;
            font-weight: 600;
            letter-spacing: 0.5px;
            padding: 15px 20px 5px;
        }

        .menu-item {
            padding: 10px 20px;
            display: block;
            color: var(--dark-color);
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            margin: 2px 0;
            border-radius: 0 20px 20px 0;
        }

            .menu-item:hover, .menu-item.active {
                background-color: var(--active-menu-bg);
                color: var(--primary-color);
                padding-left: 25px;
            }

        /* Main Content Styles */
        .main-content {
            flex: 1;
            margin-left: var(--sidebar-width);
            padding: 20px;
            width: calc(100% - var(--sidebar-width));
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .breadcrumb {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            color: #64748b;
            font-size: 14px;
        }

            .breadcrumb a {
                color: var(--primary-color);
                text-decoration: none;
            }

            .breadcrumb span {
                margin: 0 8px;
            }

        header {
            margin-bottom: 30px;
        }

        h1 {
            color: var(--primary-color);
            font-size: 28px;
            margin-bottom: 10px;
        }

        h2 {
            color: var(--dark-color);
            font-size: 22px;
            margin-bottom: 20px;
        }

        .tabs {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
            border-bottom: 1px solid #e2e8f0;
            padding-bottom: 15px;
        }

        .tab {
            padding: 8px 16px;
            cursor: pointer;
            border-radius: var(--border-radius);
            font-weight: 500;
            color: #64748b;
            transition: all 0.3s ease;
        }

            .tab.active, .tab:hover {
                color: var(--primary-color);
                background-color: #e0e7ff;
            }

        .stats-container {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background-color: white;
            border-radius: var(--border-radius);
            padding: 20px;
            box-shadow: var(--box-shadow);
        }

            .stat-card h3 {
                font-size: 14px;
                color: #64748b;
                margin-bottom: 10px;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

            .stat-card .value {
                font-size: 28px;
                font-weight: 700;
                color: var(--dark-color);
                margin-bottom: 5px;
            }

            .stat-card .trend {
                display: flex;
                align-items: center;
                font-size: 14px;
                color: var(--success-color);
            }

        .trend.down {
            color: var(--danger-color);
        }

        .trend svg {
            margin-right: 5px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: var(--box-shadow);
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #e2e8f0;
        }

        th {
            background-color: #f8fafc;
            color: #64748b;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 12px;
            letter-spacing: 0.5px;
        }

        tr:last-child td {
            border-bottom: none;
        }

        .completion-high {
            color: var(--success-color);
            font-weight: 600;
        }

        .completion-medium {
            color: var(--warning-color);
            font-weight: 600;
        }

        .completion-low {
            color: var(--danger-color);
            font-weight: 600;
        }

        .revenue {
            font-weight: 600;
        }
    </style>
</head>
<body>
    <!-- Sidebar Navigation -->
    <div class="sidebar">
        <div class="sidebar-header">
            <div class="logo">E-Learning</div>
        </div>
        <ul class="sidebar-menu">
            <li><a href="#" class="menu-item">Dashboard</a></li>
            <li><a href="/CourseInfo" class="menu-item">Courses</a></li>
            <li><a href="/UsersInfo" class="menu-item">Users</a></li>
            <li><a href="#" class="menu-item active">Analytics</a></li>

            <li class="menu-category">MANAGEMENT</li>
            <li><a href="#" class="menu-item">Instructors</a></li>
            <li><a href="#" class="menu-item">Students</a></li>
            <li><a href="#" class="menu-item">Content</a></li>

            <li class="menu-category">SYSTEM</li>
            <li><a href="#" class="menu-item">Settings</a></li>
            <li><a href="#" class="menu-item">Support</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container">
            <div class="breadcrumb">
                <a href="#">Dashboard</a>
                <span>></span>
                Analytics
            </div>

            <header>
                <h1>Analytics Dashboard</h1>
                <div class="tabs">
                    <div class="tab active">Overview</div>
                    <div class="tab">Courses</div>
                    <div class="tab">Students</div>
                    <div class="tab">Revenue</div>
                </div>
            </header>

            <div class="stats-container">
                <div class="stat-card">
                    <h3>Total Courses</h3>
                    <div class="value">42</div>
                    <div class="trend">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M5 15L12 8L19 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                        12% from last month
                    </div>
                </div>

                <div class="stat-card">
                    <h3>Active Students</h3>
                    <div class="value">1,248</div>
                    <div class="trend">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M5 15L12 8L19 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                        8% from last month
                    </div>
                </div>

                <div class="stat-card">
                    <h3>Certificate issued</h3>
                    <div class="value">51</div>
                    <div class="trend">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M5 15L12 8L19 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                        15% from last month
                    </div>
                </div>
            </div>

            <h2>Course Performance</h2>
            <table>
                <thead>
                    <tr>
                        <th>Course Name</th>
                        <th>Students</th>
                        <th>Completion Rate</th>
                        <th>Revenue</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Web Development Fundamentals</td>
                        <td>324 students</td>
                        <td class="completion-high">98% completion</td>
                        <td class="revenue">$12,450</td>
                    </tr>
                    <tr>
                        <td>UX/UI Design Masterclass</td>
                        <td>256 students</td>
                        <td class="completion-high">92% completion</td>
                        <td class="revenue">$9,870</td>
                    </tr>
                    <tr>
                        <td>Data Science Bootcamp</td>
                        <td>198 students</td>
                        <td class="completion-medium">87% completion</td>
                        <td class="revenue">$8,250</td>
                    </tr>
                    <tr>
                        <td>Mobile App Development</td>
                        <td>176 students</td>
                        <td class="completion-medium">85% completion</td>
                        <td class="revenue">$7,320</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        // Simple tab switching functionality
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', () => {
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
                // Here you would typically load content for the selected tab
            });
        });

        // Menu item active state
        document.querySelectorAll('.menu-item').forEach(item => {
            item.addEventListener('click', () => {
                document.querySelectorAll('.menu-item').forEach(i => i.classList.remove('active'));
                item.classList.add('active');
            });
        });
    </script>
</body>
</html>